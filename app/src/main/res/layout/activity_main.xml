<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#374AFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Personal Finance Management App"
        app:titleTextColor="#ffff" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#374AFF"
            android:paddingEnd="10dp"
            android:justificationMode="inter_word" />

        <EditText
            android:id="@+id/edittextName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textSalary"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#374AFF"
            android:paddingEnd="10dp"
            android:justificationMode="inter_word" />

        <EditText
            android:id="@+id/edittextSalary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textNeeds"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Needs (%)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#374AFF"
            android:paddingEnd="10dp"
            android:justificationMode="inter_word" />

        <EditText
            android:id="@+id/edittextNeeds"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textWants"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Wants (%)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#374AFF"
            android:paddingEnd="10dp"
            android:justificationMode="inter_word" />

        <EditText
            android:id="@+id/edittextWants"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textSavings"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Savings (%)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#374AFF"
            android:paddingEnd="10dp"
            android:justificationMode="inter_word" />

        <EditText
            android:id="@+id/edittextSavings"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Calculate"
        android:layout_marginTop="30dp"
        android:background="#374AFF" />
</LinearLayout>
